				</exclusion>
				<exclusion>
					 <groupId>io.netty</groupId>
  					 <artifactId>netty</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.hbase</groupId>
			<artifactId>hbase-server</artifactId>
			<version>${hbase.version}</version>
		  <exclusions>
		      <exclusion>
					<groupId>org.apache.zookeeper</groupId>
